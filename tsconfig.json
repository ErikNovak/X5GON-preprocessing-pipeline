{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "allowJs": false,
        "target": "es2017",
        "lib": ["es2017"],
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "pretty": false,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*", "topologies",
    ],
    "exclude": [
        "./pkgs/**/*"
    ]
}